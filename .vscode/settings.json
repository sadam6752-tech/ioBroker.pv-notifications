{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/vscode-2019_09_26.schema.json",
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "/io-package.json"
      ],
      "url": "https://raw.githubusercontent.com/ioBroker/ioBroker.js-controller/main/schemas/io-package.json"
    },
    {
      "fileMatch": [
        "/package.json"
      ],
      "url": "https://json.schemastore.org/package.json"
    },
    {
      "fileMatch": [
        "/admin/jsonConfig.json",
        "/admin/jsonCustom.json",
        "/admin/jsonTab.json"
      ],
      "url": "https://raw.githubusercontent.com/ioBroker/ioBroker.admin/master/packages/jsonConfig/schemas/jsonConfig.json"
    }
  ]
}
